{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "noEmit": true,
    "allowJs": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
  },
  "exclude": [
    "app/assets",
    "app/controllers",
    "app/helpers",
    "app/jobs",
    "app/mailers",
    "app/models",
    ".bundle",
    ".idea",
    "gems",
    "config",
    "**/*.spec.ts",
    "node_modules",
    "test",
    "tmp",
    "db",
    "bin",
    "vendor",
    "public",
    "react-query/types/devtools"
  ],
  "compileOnSave": false
}
